<%- include('partials/header') %>



<nav class="navbar navbar-expand-lg bg-body-tertiary">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">Games</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="/user">Home</a>
        </li>
        
        

      </ul>
      <form class="d-flex" role="search" action="/search" method="post">
        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="name">
        <button class="btn btn-outline-success" type="submit">Search</button>
      </form>
    </div>
  </div>
</nav>
<div data-coreui-toggle="rating" data-coreui-value='3'></div>
  <div class="container">
    <h1>My Games</h1>
    <a id="newPostBtn" href="/new">New Post</a>
    <ul id="postsList">
      <%if(locals.posts){%>
      <% posts.forEach(post=> { %>
        <li>
          <h2>
            <%=post.game%>
          </h2>
          <small>
            <%=post.date %>
          </small>
          <p>
            <%=post.description%>
          </p>
          <h3>Game Rating: <%= post.rating %></h3>
          <img src = '<%=post.img  %>' alt='could not fetch your games image'/>
          <a class="edit" href="/edit/<%= post.id %>">Edit</a>
          <a class="delete" href="/delete/<%= post.id %>">Delete</a>
        </li>
        <% });
      } %>
    </ul>
  </div>

  <%- include('partials/footer') %>